# Home Assistant service env sample
# Copy this to .env and adjust values for your environment.

# Basic networking
HOMEASSISTANT_CONTAINERNAME=homeassistant
HOMEASSISTANT_SUBDOMAIN=home
HOMEASSISTANT_PORT=8123

# User/group to run container
HOMEASSISTANT_PUID=${PUID}
HOMEASSISTANT_PGID=${PGID}

# Path to Home Assistant config
# e.g. /mnt/data/homeassistant/config
HOMEASSISTANT_CONFIG_PATH=./config

# Homepage integration
HOMEPAGE_HOMEASSISTANT_NAME=Home Assistant
HOMEPAGE_HOMEASSISTANT_DESCRIPTION=Home automation dashboard
HOMEPAGE_HOMEASSISTANT_GROUP=Home
HOMEPAGE_HOMEASSISTANT_ICON=mdi:home-automation
